{
  "name": "CargoShift",
  "version": "0.1.0",
  "description": "",
  "main": "electron.js",
  "targets": {
    "main": false
  },
  "build": {
    "appId": "net.anthonytarr",
    "files": [
      "datastore.js",
      "electron.js",
      "icons",
      "build/**/*"
    ],
    "win": {
      "icon": "icons/app.png",
      "target": [
        "portable",
        "nsis"
      ]
    }
  },
  "homepage": "./",
  "scripts": {
    "clean-build": "rimraf build/ .cache .parcel-cache dist/",
    "react-start": "parcel -p 3000 index.html --dist-dir ./build",
    "react-build": "parcel build index.html --dist-dir ./build --public-url ./",
    "electron-build": "electron-builder",
    "eb": "npm run electron-build",
    "build": "npm run clean-build && npm run react-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . \""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/nedb": "^1.8.10",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-table": "^7.0.22",
    "@types/styled-components": "^5.1.2",
    "@types/uuid": "^8.3.0",
    "asar": "^3.0.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "parcel": "^2.0.0-beta.1",
    "sass": "^1.26.10",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@types/classnames": "^2.2.10",
    "@types/recoil": "0.0.1",
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.2.0",
    "get-file-properties": "^1.0.1",
    "nedb": "^1.8.0",
    "path": "^0.12.7",
    "polished": "^3.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-table": "^7.5.0",
    "recoil": "0.0.10",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.7",
    "undux": "^5.2.0",
    "uuid": "^8.3.0"
  }
}
